<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">


    <!--    头像-->
    <LinearLayout
        android:id="@+id/ll_portrait"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingBottom="10dp">

        <com.example.findyourlove.RoundImageView
            android:id="@+id/ri_portrait"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/padding_left_and_right"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_header2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/gray3"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/padding_left_and_right"/>

    </LinearLayout>
    <!--    编辑界面，此处可以写成一个ItemGroup上传至com上-->
    <com.example.findyourlove.ItemGroup
        android:id="@+id/ig_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:jt_visible="false"
        app:paddingLeft="@dimen/padding_left_and_right"
        app:title="ID" />

    <com.example.findyourlove.ItemGroup
        android:id="@+id/ig_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:edt_hint_content=""
        app:paddingLeft="@dimen/padding_left_and_right"
        app:title="name" />

    <com.example.findyourlove.ItemGroup
        android:id="@+id/ig_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:edt_hint_content=""
        app:paddingLeft="@dimen/padding_left_and_right"
        app:title="Gender"/>

    <com.example.findyourlove.ItemGroup
        android:id="@+id/ig_region"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        app:edt_hint_content=""
        app:paddingLeft="@dimen/padding_left_and_right"
        app:title="Region" />

    <com.example.findyourlove.ItemGroup
        android:id="@+id/ig_brithday"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        app:edt_hint_content=""
        app:paddingLeft="@dimen/padding_left_and_right"
        app:title="Birthday" />

    <Button
        android:id="@+id/Chat"
        android:text="chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="chat" />
    <Button
        android:id="@+id/Back"
        android:text="Back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="chat" />

</LinearLayout>